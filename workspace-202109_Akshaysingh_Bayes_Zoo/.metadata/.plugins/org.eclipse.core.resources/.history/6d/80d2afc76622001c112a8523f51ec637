package edu.neu.csye6200;

import java.util.ArrayList;
import java.util.List;

public class ZooAnimalAPI {
	List<AnimalAPI> list = new ArrayList<>();
	
	@Override
	public String toString() {
		StringBuilder sb = new StringBuilder();
		
		sb.append(this.list.size() + " animals in zoo.").append("\n");
		for (AnimalAPI animal: list) {
			sb.append(" ").append(animal.toString()).append("\n");
			animal.speak();
		}
		
		return sb.toString();
	}
	
	public static void demo() {
		AnimalAPI animal = new AnimalAPI();
		Cat cat = new Cat();
		Dog dog = new Dog();
		Fish fish = new Fish();
		
		List<AnimalAPI> list = new ArrayList<>();
		list.add(animal);
		list.add(cat);
		list.add(dog);
		list.add(fish);
		
		ZooAnimalAPI zoo = new ZooAnimalAPI();
		System.out.println(zoo);	
	}
}
