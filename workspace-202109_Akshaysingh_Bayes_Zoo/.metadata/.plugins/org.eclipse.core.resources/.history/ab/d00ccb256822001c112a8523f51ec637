package edu.neu.csye6200;

import java.util.ArrayList;
import java.util.List;

public class ZooAnimalAPI {
	private static List<AnimalAPI> list = null;
	{
		list = new ArrayList<>();
	}
	
	public void add(AnimalAPI animal) {
		this.list.add(animal);
	}
	
	@Override
	public String toString() {
		StringBuilder sb = new StringBuilder();
		
		sb.append("\n There are total "+list.size() + " animals in zoo.").append("\n");
		for (AnimalAPI animal: list) {
			sb.append(animal.toString()).append("\n");
			animal.speak();
		}
		
		return sb.toString();
	}
	
	public static void demo() {
		AnimalAPI animal = new AnimalAPI();
		Cat cat = new Cat();
		Dog dog = new Dog();
		Fish fish = new Fish();
		
		ZooAnimalAPI zoo = new ZooAnimalAPI();
		zoo.add(animal);
		zoo.add(cat);
		zoo.add(dog);
		zoo.add(fish);
		System.out.println(zoo);	
		
	}
}
